{
  "builds": [
    {
      "src": "app/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    }
  ],
  "framework": "nextjs",
  "cleanUrls": true,
  "buildCommand": "cd app && next build && cd ../server && npx prisma generate && npx prisma migrate deploy",
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": false
    }
  ]
}

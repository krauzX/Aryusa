{
  "version": 2,
  "builds": [
    {
      "src": "app/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "server/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/$1"
    }
  ],
  "cleanUrls": true,
  "buildCommand": "next build && cd ../server && npx prisma generate && npx prisma migrate deploy"
}
